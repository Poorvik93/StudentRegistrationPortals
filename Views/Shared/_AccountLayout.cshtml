<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StudentRegistrationPortal | @ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/Assests/Stylesheets/userStyle.css" />

</head>

<body>
    <div class="overlay h-100">

        <main class="d-flex justify-content-center align-items-center h-100">
            <div class="main-content z-3 ">
                <p class="fw-bold fs-1 text-white my-0 text-center ">SRP</p>
                <p class="text-white text-center">Sign in for full access to our website.</p>
                <div class="rounded-3 bg-white p-4 ">

                    <div class="row btn-group align-items-center w-100">
                        <p class="col-6 login-tab btn rounded-0 @ViewBag.LoginTabActive">
                            @Html.ActionLink("Log In", "Login", "User", new { }, new { @class = "text-decoration-none fs-5 fw-semibold text-secondary" })
                        </p>
                        <p class="col-6 btn rounded-0 signup-tab @ViewBag.SignUpTabActive">
                            @Html.ActionLink("Sign Up", "Signup", "User", new { }, new { @class = "text-decoration-none fs-5 fw-semibold text-secondary" })
                        </p>
                    </div>

                    @RenderBody()
                </div>
            </div>
        </main>

    </div>

    <script>
        let passwordField = document.getElementById("password-field");
        let eyeIcon = document.getElementById("eye-icon");
        eyeIcon.addEventListener("click", (e) => {
            const inputType = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            const eyeIconVariarnt = eyeIcon.getAttribute('class') === 'bi bi-eye fs-5 me-2' ? 'bi bi-eye-slash-fill fs-5 me-2' : 'bi bi-eye fs-5 me-2';
            eyeIcon.setAttribute('class', eyeIconVariarnt);
            passwordField.setAttribute('type', inputType);
        });

    </script>
</body>

</html>